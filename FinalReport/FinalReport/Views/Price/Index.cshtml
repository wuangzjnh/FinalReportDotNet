    <script>
        $(function () {
            var table = $("#prices").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Price/getPrices",
                    "type": "POST",
                    "dataType": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false
                }, {
                    "targets":["_all"],
                    "orderable":false
                }],
                "columns": [
                    { "data": "id" },
                    {
                        "data": "picture", "render": function (data, type, row, meta) {
                            return "<img src='/assets/images/" + row.picture + "' class='img-circle img-size-32 mr-2'/>";
                        }
                    },
                    { "data": "color" },
                    { "data": "size" },
                    {
                        "data": "price",
                        "render": function (data, type, row) {
                            return "$" + row.price; 
                        }
                    },
                    { "data": "amount" },
                    {
                        "render": function (data, type, row) {
                            return "<button type='button' class='btn dropdown-toggle float-right' data-toggle='dropdown'><i class='fas fa-align-right'></i></button><div class='dropdown-menu'><a class='dropdown-item editPrice' data-id='" + row.id + "' href='#'><i class='fas fa-pencil-alt text-primary pr-3'></i>Cập nhật</a> <a class='dropdown-item removePrice' data-id='" + row.id + "' href='#'><i class='fas fa-trash text-danger pr-3'></i>Xóa</a> <div class= 'dropdown-divider'></div><a data-toggle='modal' data-target='#model-product-category' class='dropdown-item ProductCategory' data-id='" + row.id + "' href='#'><i class='fas fa-shopping-bag text-danger pr-3'></i>Chuyên mục</a><a class='dropdown-item Votings' data-id='" + row.id + "' href='#'><i class='fas fa-vote-yea text-danger pr-3'></i>Bình chọn </a> </div>";
                        }
                    }
                ]
            });

            new $.fn.dataTable.Buttons(table, {
                buttons: [{
                    text: 'Thêm đơn giá',
                    Attr: { class: 'btn btn-primary float-left ml-3' },
                    action: function (e, dt, node, config) {
                        window.location = "/Price/Edit/?productId=@Model";
                    }
                }]
            });

            table.buttons().container().appendTo($(".dataTables_length", table.table().container()));

            $(document).on("click", "#prices .editPrice", function (e) {
                e.preventDefault();
                var id = $(this).data("id");
                window.location = "/Price/Edit/?productId=@Model&Id=" + id;
            });

            $(document).on("click", "#prices .removeProduct", function (e) {
                e.preventDefault();
                if (confirm("Xác nhận xóa")) {
                    var id = $(this).data("id");
                    $.ajax({
                        url: "/ProductAdmin/Remove/" + id,
                        type: "POST",
                        success: function (data) {
                            // Optionally handle success response
                            console.log("Product removed successfully");
                            // Redirect to a new location if needed
                            window.location = "/ProductAdmin/Index";
                        },
                        error: function (error) {
                            // Optionally handle error response
                            console.error("Error removing product", error);
                        }
                    });
                }
            });
            

        });
    </script>
