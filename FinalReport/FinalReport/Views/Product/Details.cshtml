    <script>
        $(function () {
            $(".product-gallery-item:first-child").addClass("active");
            $(".product-nav-thumbs a:first-child").addClass("active");
            $(document).on("click", ".product-nav-thumbs a", function (e) {
                e.preventDefault();
                $(".product-nav-thumbs a").removeClass("active");
                $(this).addClass("active");
                getPrice();
            });
            $("#size").on("change", function (e) {
                e.preventDefault();
                getPrice();
            });
            function getPrice() {
                $.get("/Product/getPrices",
                    {
                        productID: '@Model.Product.ID',
                        colorID: $(".product-nav-thumbs a[class=active]").data("colorid"),
                        sizeID: $("#size").val()
                    },
                    function (items) {
                        console.log(items)
                        if (items.id != "") {
                            if (items.amount <= 0) {
                                $(".product-price").html("Hết hàng");
                                $(".product-amount").html("0");
                            } else {
                                $(".product-price").html("$" + items.price);
                                $(".product-amount").html(items.amount);
                            }
                        }
                    });
            } 
        });
    </script>
}