    <script>
        jQuery(function ($) {
            getCart();
            function getCart() {
                $.get("/Product/getCart",
                    {},
                    function (items) {
                        $(".cart-count").html(items.length);
                        $(".dropdown-cart-products").html("");
                        var totalPrice = 0;
                        for (let i = 0; i < items.length; i++) {
                            var row = "<div class='product'>" +
                            "<div class='product-cart-details'>" +
                                "<h4 class='product-title'>" +
                                "<a href='/Product/Details/"+items[i]._product.id+"'>"+items[i]._product.name+"</a>" +
                                "</h4>" +
                                "<span class='cart-product-info'>" +
                                "<span class='cart-product-qty'>" + items[i]._amount + "</span>" +
                                "x " +"$"+ Math.floor(items[i]._productPrice.price) +
                                "</span>" +
                                "</div>" +

                                "<figure class='product-image-container'>" +
                                "<a href='product.html' class='product-image'>" +
                                "<img src='/assets/images/" + items[i]._productPrice.picture + "' alt='product'>" +
                                "</a>" +
                                "</figure>" +
                                "<a href='#' class='btn-remove' title='Remove Product'>" + "<i class='icon-close'>" + "</i>" + "</a>" +
                                "</div>" ;
                            totalPrice += items[i]._productPrice.price * items[i]._amount
                            $(".dropdown-cart-products").append(row);
                            $(".cart-total-price").html(Math.floor(totalPrice));
                        }
                    });
            }
            $(".btn-cart").on("click", function (e) {
                e.preventDefault();
                var productId = $(this).data("id");
                var colorId = $(".product-nav-thumbs a[class=active]").data("colorid");
                var sizeId = $("#size").val(); // Assuming you have an element with id "size" for selecting size
                var amount = $("#qty").val();
                addCart(productId, colorId, sizeId, amount);
                console.log(productId + ";" + colorId + ";" + sizeId + ";" + amount);
            });

            function addCart(productId, colorId, sizeId, amount) {
                $.get("/Product/addCart",
                    {
                        productId: productId,
                        colorId: colorId,
                        sizeId: sizeId,
                        amount: amount
                    },
                    function (items) {
                        getCart();
                    }
                );
            }
        });
    </script>
